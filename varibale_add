     // provider name //
provider "aws" {

   region     = "us-east-1"
   
}
      // resources add //

resource "aws_instance" "server" {
   
   ami           = "ami-079db87dc4c10ac91"
   
      // varibale adding example //
   instance_type = var.instance_type                                      // variable 1 adding instance type //
   count = var.instance_count                                             // var 2 instance count //
   associate_public_ip_address = var.enable_public_ip                    // var3 //
   tags = var.project_environment                                        // var4  project env. //
   
}
   
variable "instance_type" {
   description = "Instance type t2.micro"                                          // var 1 //
   type        = string
   default     = "t2.micro"
} 

variable "instance_count" {
  description = "EC2 instance count"                                               //var 2 //
  type        = number
  default     = 2
}

variable "enable_public_ip" {
  description = "Enable public IP address"                                        //var 3 //
  type        = bool
  default     = true
}
  variable "project_environment" {
  description = "project name and environment"
  type        = map(string)
  default     = {
    project     = "project-alpha",
    environment = "dev"
  }
}
